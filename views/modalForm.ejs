 
<div id="myModal" class="modal">
    <div class="modal-content">
        <span onclick="closeModal()" class="close">&times;</span>
        <h2 >Adicionar bolsa</h2>
        <h4>dades do seu interesse e receba atualizaçõe </h4>
        <form action="">
            <div id="formContent">
                <div id="formContentLine">
                    <div id="formContentLineElements">
                        SELECIONE SUA CIDADE
                        <div>
                            <select id="customSelect" aria-placeholder="CIDADE">
                                <% listCity.forEach( city => { %>
                                    <option><%- city.city %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                    <div id="formContentLineElements">
                        SELECIONE O CURSO DE SUA PREFERÊNCIA
                        <div>
                            <select id="customSelect" aria-placeholder="CURSO">
                                <% listCursos.forEach( c => { %>
                                    <option><%- c.name %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                </div>
                <div id="formContentLine">
                    <div id="formContentLineElements">
                        COMO VOCÊ QUER ESTUDAR?
                        <div id="customCheckBox">
                            <label>
                                <input type="checkbox"> Presencial
                            </label>
                            <label>
                                <input type="checkbox"> A distancia
                            </label>
                        </div>
                    </div>
                    <div id="formContentLineElements">
                        ATÉ QUANTO PODE PAGAR?
                        <p>R$ <span id="valorPreco"></span></p> 
                        <input type="range" min="1000" max="10000" value="5000" class="slider" id="myRange">
                    </div>
                </div>
                <div id="formContentLine">
                    <div id="formContentLineElements">Resultado:</div>
                    <div id="formContentLineElements">Ordenar por</div>
                </div>
                <div id="lineDivision"></div>

                <% listUniveritys.forEach( uni => { %>

                <div id="listFaculdades">
                        <div id="checkFaculdade">
                        <input type="checkbox">
                        </div>
                        
                        <div id="logoFaculdade"><img src="<%- uni.university.logo_url %>"></div>
                        
                        <div id="nameAndLevel">
                            <div id="nameCourseName">
                                <label>
                                    <%- uni.course.name %>
                                </label>
                            </div>
                            <div id="nameCourseLevel">
                                <label>
                                    <%- uni.course.level %>
                                </label>
                            </div>
                        </div>
                        
                        <div>
                                <div id="valorDisconto">
                                    Bolsa de 
                                    <label id="labelDesconto"><%- uni.discount_percentage %>%</div></label>
                                <div id="valorFaculdade">
                                    <label>
                                        R$ 
                                        <%- uni.price_with_discount %>
                                        /mês
                                    </label>
                                </div>
                        </div>
                        
                </div>
                <div id="lineDivision"></div>
                <% }) %>

                <footer id="footerForm">
                    <label id="btnCancelar">Cancelar</label>
                    <label id="btnAddBolsa">Adicionar Bolsa(s)</label>
                </footer>
            </div>
        </form>
    </div>
  
    <script> 
            let rangeslider = document.getElementById("myRange"); 
            let output = document.getElementById("valorPreco"); 
            output.innerHTML = rangeslider.value; 
                
            rangeslider.oninput = function() { 
                output.innerHTML = parseFloat(this.value).toFixed(2); 
            } 
        </script> 

  </div>